<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/question_type1_dialog"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:onClick="openQuestionBuilding"
        android:paddingTop="10dp"
        android:text="Вопрос с 4 вариантами ответа"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_type2_dialog"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:onClick="openQuestionBuilding"
        android:paddingTop="10dp"
        android:text="Вопрос с 4 вариантами ответа и предложением"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_type1_dialog" />

    <TextView
        android:id="@+id/question_type3_dialog"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="openQuestionBuilding"
        android:paddingTop="10dp"
        android:text="Вопрос с вводом ответа"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_type2_dialog" />
</androidx.constraintlayout.widget.ConstraintLayout>