<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question1_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question1_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_standard"
        android:text="/4"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintStart_toEndOf="@+id/question1_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question1_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_standard"
        android:layout_marginEnd="@dimen/padding_standard"
        android:fontFamily="sans-serif-black"
        android:text="29:30"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question1_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_standard"
        android:fontFamily="sans-serif-black"
        android:text="1"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question1_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="finishTest"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/finishTest"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/question1_left"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="prevQuestion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />

    <ImageView
        android:id="@+id/question1_right"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="nextQuestion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_right" />

    <TextView
        android:id="@+id/question1_list_of_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="selectQuestion"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/listOfQuestions"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toStartOf="@+id/question1_timer"
        app:layout_constraintStart_toEndOf="@+id/question1_quantity"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/question1_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/question1_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/question1_linear_layout_answers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/padding_standard"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/question1_text">

                    <TextView
                        android:id="@+id/question1_option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_rounded_button"
                        android:gravity="center"
                        android:onClick="answer1"
                        android:padding="6dp"
                        android:text="дОговор"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_regular" />

                    <TextView
                        android:id="@+id/question1_option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@drawable/blue_rounded_button"
                        android:gravity="center"
                        android:onClick="answer1"
                        android:padding="6dp"
                        android:text="квартАл"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_regular" />

                    <TextView
                        android:id="@+id/question1_option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@drawable/blue_rounded_button"
                        android:gravity="center"
                        android:onClick="answer1"
                        android:padding="6dp"
                        android:text="гЕрбовый"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_regular" />

                    <TextView
                        android:id="@+id/question1_option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_medium"
                        android:background="@drawable/blue_rounded_button"
                        android:gravity="center"
                        android:onClick="answer1"
                        android:padding="6dp"
                        android:text="прИнятый"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_regular" />

                </LinearLayout>

                <TextView
                    android:id="@+id/question1_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="@string/exampleQuestion1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </RelativeLayout>
    


</androidx.constraintlayout.widget.ConstraintLayout>