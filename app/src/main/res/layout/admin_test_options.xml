<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/admin_test_options_change"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:onClick="adminTestOptions"
        android:paddingTop="10dp"
        android:text="Изменить тест"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_test_options_delete"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:onClick="adminTestOptions"
        android:paddingTop="10dp"
        android:text="Удалить тест"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_test_options_change" />

</androidx.constraintlayout.widget.ConstraintLayout>